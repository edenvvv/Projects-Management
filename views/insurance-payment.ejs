  <%- include('partials/header'); %>

  <!-- End Header -->
  
  <div class="row">
    <div class="col-75">
      <div class="container-s">
        <form action="/insurance-payment" method="POST">
  
          <div class="row">
            <div class="col-50">
              <h3>Billing Address</h3>
              <label for="fname"><i class="fa fa-user"></i> Full Name</label>
              <input type="text" id="fname" name="firstname" placeholder="John M. Doe" required>
              <label for="email"><i class="fa fa-envelope"></i> Email</label>
              <input type="text" id="email" name="email" placeholder="john@example.com" required>
              <label for="adr"><i class="fa fa-address-card-o"></i> ID</label>
              <input type="text" id="id" name="id" placeholder="123456789" pattern="[0-9]{9}" required>
              <div class="row">
                <label for="city"><i class=""></i> Filght date</label>
                <input type="date" min="2000-01-01" max="2099-01-01" name="date" id="date" placeholder="Departure" required>
                <label for="adr"><i class=""></i> Totals days</label>
                <input type="number" id="total_days" min="1" max="100" name="total_days" placeholder="5" required>
              </div>
            </div>
  
            <div class="col-50">
              <h3>Payment</h3>
              <label for="cname">Name on Card</label>
              <input type="text" id="cname" name="cardname" placeholder="John More Doe" required>
              <label for="ccnum">Credit card number</label>
              <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444" pattern="[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{4}" required>
              <label for="expmonth">Exp Month</label>
              <input type="number" id="expmonth" name="expmonth" placeholder="1-12" min="1" max="12" required>
  
              <div class="row">
                <div class="col-50">
                  <label for="expyear">Exp Year</label>
                  <input type="number" id="expyear" name="expyear" placeholder="2021" min="2021" max="2100" required>
                </div>
                <div class="col-50">
                  <label for="cvv">CVV</label>
                  <input type="text" id="cvv" name="cvv" placeholder="352" pattern="[0-9]{3}" required>
                </div>
              </div>
            </div>
  
          </div>
          <input type="submit" value="Checkout" class="btn" onclick="confirmation_message()">
        </form>
      </div>
    </div>
  </div>



