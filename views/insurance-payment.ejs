    var mm = today.getMonth()+1; //January is 0 so need to add 1 to make it 1!
    var yyyy = today.getFullYear();
    if(dd<10){
    dd='0'+dd
    } 
    if(mm<10){
    mm='0'+mm
    } 

    today = yyyy+'-'+mm+'-'+dd;
    document.getElementById("date").setAttribute("min", today);

    console.log(today)

  </script>

    <script>
        function confirmation_message(){
            if(document.getElementById("fname").value.length > 0 && document.getElementById("email").value.length > 7 && document.getElementById("id").value.length == 9 
            && document.getElementById("date").value.length > 0 && document.getElementById("total_days").value.length > 0 && document.getElementById("cname").value.length > 0
            && document.getElementById("ccnum").value.length == 19 && document.getElementById("expmonth").value.length > 0 && document.getElementById("expyear").value.length > 0
            && document.getElementById("cvv").value.length == 3){
                console.log("test")
                alert("Your order has been confirmed! Email with confirmation of order details sent to email: " + document.getElementById("email").value)
            }
        }
